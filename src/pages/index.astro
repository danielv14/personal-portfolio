---
import BaseLayout from '@layouts/BaseLayout.astro';
import PostCard from '@components/PostCard.astro';
import { getCollection } from 'astro:content';
const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 4);
---

<BaseLayout>
  <section class="py-12">
    <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-primary to-emerald-400 bg-clip-text text-transparent inline-block leading-normal">Hej!</h1>
    <p class="text-lg text-text-muted mt-4 max-w-2xl">
      Daniel här! Jag är en 30-nånting fullstackutvecklare som jobbat med utveckling sedan 2017.
    </p>
    <p class="text-lg text-text-muted mt-4 max-w-2xl">
      Här skriver jag löst om saker jag stöter på i jobbet, verktyg jag testar och tankar som dyker upp längs vägen.
    </p>
  </section>

  <section class="py-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold">Några inlägg</h2>
      <a href="/blogg" class="text-text hover:text-white underline transition-colors">
        Visa alla &rarr;
      </a>
    </div>
    <div class="grid gap-4">
      {latestPosts.map((post) => (
        <PostCard
          title={post.data.title}
          date={post.data.date}
          summary={post.data.summary}
          slug={post.id}
        />
      ))}
    </div>
  </section>
</BaseLayout>
