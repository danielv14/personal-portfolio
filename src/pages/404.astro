---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="Sidan hittades inte">
  <div class="text-center py-20">
    <h1 class="text-6xl font-bold text-text-muted">404</h1>
    <p class="text-xl mt-4 text-text-muted">Sidan du letar efter finns inte.</p>
    <a
      href="/"
      class="inline-block mt-8 px-6 py-3 bg-surface text-text rounded-lg hover:bg-surface/80 transition-colors"
    >
      Tillbaka till startsidan
    </a>
  </div>
</BaseLayout>
