---
interface Props {
  title: string;
  date: Date;
  summary: string;
  slug: string;
  category?: string;
}

const { title, date, summary, slug, category } = Astro.props;

const day = date.getDate();
const year = date.getFullYear();
const monthNames = ['jan', 'feb', 'mar', 'apr', 'maj', 'jun', 'jul', 'aug', 'sep', 'okt', 'nov', 'dec'];
const formattedDate = `${day} ${monthNames[date.getMonth()]}, ${year}`;
---

<a
  href={`/blogg/${slug}`}
  class="block p-5 rounded-lg bg-surface border border-border hover:bg-surface/80 transition-colors group"
>
  <h3 class="text-lg font-semibold text-text group-hover:underline">
    {title}
  </h3>
  <p class="text-text-muted text-sm mt-2">{summary}</p>
  <div class="flex items-center gap-2 mt-3 text-xs text-text-muted">
    <time>{formattedDate}</time>
    {category && (
      <>
        <span>Â·</span>
        <span class="lowercase">{category}</span>
      </>
    )}
  </div>
</a>
